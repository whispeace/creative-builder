{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/vite.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@utils": ["../../packages/utils"],
      "@tailwind": ["../../packages/tailwind"],
      "@tailwind/*": ["../../packages/tailwind/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "vite.config.ts", "tailwind.config.ts"]
}
